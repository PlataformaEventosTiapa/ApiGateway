{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp.ReverseProxy": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      
      "auth-login-route": { 
        "ClusterId": "users-cluster",
        "Match": {
          "Path": "/api/auth/login", 
          "Methods": [ "POST" ]
        },
        "CorsPolicy": "AllowFrontend",
        "Transforms": [
          { "PathPattern": "/api/Auth/login" } 
        ]
      },
      
      "auth-register-route": { 
        "ClusterId": "users-cluster",
        "Match": {
          "Path": "/api/auth/register", 
          "Methods": [ "POST" ]
        },
        "CorsPolicy": "AllowFrontend",
        "Transforms": [
          { "PathPattern": "/api/Auth/register" } 
        ]
      },
      
      "events-public-route": {
        "ClusterId": "events-cluster",
        "Match": {
          "Path": "/api/events",
          "Methods": [ "GET" ]
        },
        "CorsPolicy": "AllowFrontend"
      },
      
      "events-protected-route": {
        "ClusterId": "events-cluster",
        "Match": {
          "Path": "/api/events/{**catch-all}",
          "Methods": [ "POST", "PUT", "DELETE", "GET" ]
        },
        "AuthorizationPolicy": "auth_policy",
        "CorsPolicy": "AllowFrontend"
      },
      
      "bookings-route": {
        "ClusterId": "bookings-cluster",
        "Match": {
          "Path": "/api/bookings/{**catch-all}"
        },
        "AuthorizationPolicy": "auth_policy_user",
        "CorsPolicy": "AllowFrontend"
      },
      
      "users-public-route": {
        "ClusterId": "users-cluster",
        "Match": {
          "Path": "/api/users/health"
        },
        "CorsPolicy": "AllowFrontend",
        "Transforms": [
          { "PathPattern": "/health" }
        ]
      },

      "users-protected-auth-route": { 
        "ClusterId": "users-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}" 
        },
        "AuthorizationPolicy": "auth_policy", 
        "CorsPolicy": "AllowFrontend",
        "Transforms": [
          { "PathPattern": "/api/Auth/{**catch-all}" } 
        ]
      },
      
      "users-protected-admin-route": {
        "ClusterId": "users-cluster",
        "Match": {
          "Path": "/api/users/{**catch-all}" 
        },
        "AuthorizationPolicy": "auth_policy",
        "CorsPolicy": "AllowFrontend",
        "Transforms": [
          { "PathPattern": "/api/Users/{**catch-all}" }
        ]
      },
      
      "admin-route": {
        "ClusterId": "admin-cluster",
        "Match": {
          "Path": "/api/admin/{**catch-all}"
        },
        "AuthorizationPolicy": "auth_policy_admin",
        "CorsPolicy": "AllowFrontend"
      }
    },
    "Clusters": {
      
      "events-cluster": {
        "Destinations": {
          "destination1": { "Address": "http://localhost:5001/" }
        }
      },
      
      "bookings-cluster": {
        "Destinations": {
          "destination1": { "Address": "http://localhost:5002/" }
        }
      },
      
      "users-cluster": {
        "Destinations": {
          "destination1": { "Address": "http://localhost:5065" } 
        }
      },
      
      "admin-cluster": {
        "Destinations": {
          "destination_users": { "Address": "http://localhost:5065/" }, 
          "destination_bookings": { "Address": "http://localhost:5002/" }
        }
      }
    }
  },
  
  "JwtBearer": {
    "Authority": "http://localhost:8080/realms/tu-realm",
    "Audience": "tu-client-id",
    "RequireHttpsMetadata": false,
    "ClientSecret": "XOY5zTkwTqQ8avz8qpUlqe2GIznI8Z3E" 
  },
  "Keycloak": {
    "AdminUsername": "admin",
    "AdminPassword": "admin"
  }
}